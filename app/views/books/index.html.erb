<p id="notice">
 <%= notice %> 
</p>

<h1>Books</h1>

<table>
<thead>
<tr>
<th>Title</th>
<th>Body</th>
<th></th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr> 
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td><%= link_to "Show", book_path(book.id) %></td>
<td><%= link_to "Edit", edit_book_path(book.id) %></td>
<td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
</tr>  
<% end %>
</tbody>   
</table>

<h2>New book</h2>

<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
   <h3 class="error_message">error prohibited this book from being saved:</h3>
   <br><p class="error_message">can't be blank</p></br>
<% end %>

<div class="text_margin">
  <label for="booktitle">Title</label>
  <br><%= f.text_field :title %></br>
</div>
<div class="text_margin">
  <label for="bookbody">Body</label>
  <br><%= f.text_area :body %></br>
</div>

<%= f.submit 'Create Book' %>

<% end %>